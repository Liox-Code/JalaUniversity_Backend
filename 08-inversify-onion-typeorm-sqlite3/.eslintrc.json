{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": ["standard"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": [".eslintrc.json"],
    "rules": {
      "quotes": ["error", "single"],
      "indent": ["error", 4],
      "no-multi-spaces": ["error"]
    }
  }
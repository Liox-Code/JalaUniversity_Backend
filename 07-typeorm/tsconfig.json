{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",    
    "esModuleInterop": true,   
    "target": "ES2020",      
    "strict": true,
    "moduleResolution": "node",
    "sourceMap":true,
    "outDir": "dist",
    "noImplicitAny": true, // No acepta any implicito
    "strictBindCallApply": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src"]
}
